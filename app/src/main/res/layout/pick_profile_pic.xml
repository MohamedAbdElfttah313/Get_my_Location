<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pickProfilePickDialog"
    android:layout_height="300dp"
    android:background="@drawable/rounded"
    android:backgroundTint="#4A707A"
    android:padding="24dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reminderTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Profile Picture Setup"
        android:textColor="@color/white"
        android:layout_below="@id/pickProfilePickDialog"
        android:layout_toStartOf="@id/pickProfilePickDialog"
        android:layout_toEndOf="@id/pickProfilePickDialog"
        android:gravity="center"
        android:textSize="20sp"
        android:letterSpacing="0.06"
        app:fontFamily="sans-serif-light"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-Click the upload button if you want to upload a new profile Picture."
        android:textColor="@color/white"
        android:layout_below="@id/reminderTextView"
        android:lineSpacingExtra="3dp"
        android:layout_toStartOf="@id/pickProfilePickDialog"
        android:layout_toEndOf="@id/pickProfilePickDialog"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="start|top"
        android:textSize="14sp"
        android:letterSpacing="0.08"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/setProfilePic"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@id/textTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-140dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="-230dp"
        android:layout_toStartOf="@id/pickProfilePickDialog"
        android:layout_toEndOf="@id/pickProfilePickDialog"
        android:background="@drawable/edgy_background"
        android:backgroundTint="#FFFFFF"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_arrow_upward_24" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBarForPic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/setProfilePic"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressBackgroundTint="@color/blackedgrey"
        android:progressTint="@color/white"
        android:layout_toStartOf="@id/pickProfilePickDialog"
        android:layout_toEndOf="@id/pickProfilePickDialog"/>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>