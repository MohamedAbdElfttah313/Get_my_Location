<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_activity_background"
    tools:context=".UI.RegistrationAndLogin.LoginFragment">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:letterSpacing=".18"
        android:lineSpacingExtra="4dp"
        android:text="Dont't Worry\nYou're Not Alone"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EmailSignInEditText"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:gravity="start|center"
        android:hint="Enter Email"
        android:inputType="text"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:scaleX="1.1"
        android:scaleY="1.1"


        android:src="@drawable/undraw_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <androidx.appcompat.widget.AppCompatEditText

        android:id="@+id/PasswordSignInEditText"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded"
        android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
        android:gravity="start|center"
        android:hint="Enter Password"
        android:inputType="textPassword"

        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/EmailSignInEditText"
        app:layout_constraintStart_toStartOf="@+id/EmailSignInEditText"
        app:layout_constraintTop_toBottomOf="@+id/EmailSignInEditText" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ForgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Forgot Password?"

        android:textColor="#1B1B1B"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PasswordSignInEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/PasswordSignInEditText"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSignInEditText" />

    <android.widget.Button
        android:id="@+id/LogInButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#9DC2FF"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="@+id/PasswordSignInEditText"
        app:layout_constraintStart_toStartOf="@+id/PasswordSignInEditText"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSignInEditText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Have an account?"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/LogInButton"
        app:layout_constraintEnd_toEndOf="@+id/LogInButton"
        app:layout_constraintStart_toStartOf="@+id/LogInButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Or you can register here"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/RegisterButton"
        app:layout_constraintEnd_toEndOf="@+id/RegisterButton"
        app:layout_constraintStart_toStartOf="@+id/RegisterButton" />

    <android.widget.Button
        android:id="@+id/RegisterButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#FF9E80"
        android:letterSpacing="0.08"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/LogInButton"
        app:layout_constraintStart_toStartOf="@+id/LogInButton"
        app:layout_constraintTop_toBottomOf="@+id/LogInButton"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>