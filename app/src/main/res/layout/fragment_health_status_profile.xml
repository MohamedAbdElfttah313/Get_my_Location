<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="15dp"
    android:padding="18dp"
    tools:context=".UI.CurrentUser.Fragments.ProfileInnerFragments.ProfileHealthStatusFragment">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ContentHealthStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_weight="3"
        android:enabled="true"
        android:background="@drawable/edgy_background"
        android:elevation="5dp"
        android:padding="12dp"
        android:gravity="top|start"
        android:textColorHint="#D1D1D1"
        android:backgroundTint="#6E6E6E"
        android:hint="Example:\nBlood Type : B+"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/AddHealthState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"

        android:padding="7dp"
        android:background="@drawable/rounded_clicked"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_baseline_add_24"/>

</androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HealthStatusRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</androidx.appcompat.widget.LinearLayoutCompat>